<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div id="grid-div">
    </div>

    <div>
      <form>
        <fieldset>
          <label for="x">X-Coordinate</label>
          <select name="x" id="x">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
          <label for="y">Y-Coordinate</label>
          <select name="y" id="y">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
          </select>
          <label for="face">Direction to Face</label>
          <select name="face" id="face">
            <option value="0">North</option>
            <option value="1">East</option>
            <option value="2">South</option>
            <option value="3">West</option>
          </select>
          <button type="button" id="btn-place">Place</button>
        </fieldset>

        <fieldset>
          <label for="turn">Turn</label>
          <select name="turn" id="turn">
            <option value="1">Right</option>
            <option value="-1">Left</option>
          </select>
          <button type="button" id="btn-turn">Turn</button>
        </fieldset>

        <fieldset>
          <button type="button" id="btn-move">Move Forward</button>
        </fieldset>

        <fieldset>
          <button type="button" id="btn-report">Report</button>
        </fieldset>
      </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="/javascripts/lib/d3.min.js"></script>
    <script src="/javascripts/d3-helper.js"></script>
    <script src="/javascripts/client.js"></script>
  </body>
</html>
